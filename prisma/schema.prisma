generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Users {
  id           Int     @id @default(autoincrement())
  userId       String  @unique
  imgaeUrl     String
  name         String?
  accessToken  String
  refreshToken String
  aboutMe      String
  Games        Games[]
}

model Games {
  id         Int    @id @default(autoincrement())
  user       Users  @relation(fields: [userId], references: [userId])
  userId     String
  totalPoint Int
  bestPoint  Int
}

model Site {
  id         Int      @id @default(autoincrement())
  date       DateTime @default(now())
  totalVisit Int
  todayVisit Int
}

model Inventories {
  id Int @id @default(autoincrement())
}
